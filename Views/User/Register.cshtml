@{
 var registrationSuccessful = (bool)ViewData["registrationSuccessfull"];
 var error = (bool)ViewData["error"];
}
@if(registrationSuccessful)
{
 <div class="alert alert-primary" role="alert">
   Thanks for registration!!
 </div>
}
@if(error)
{
 <div class="alert alert-primary" role="alert">
   Something went wrong! Try again with different email
 </div>
}


  <div class="container-fluid mt-5" style="margin-top:20px">
    <div class="row">
    <form action="/User/Register" method="post">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <label for="name"><b>Name</b></label>
    <input type="text" placeholder="Enter Name" name="userName" required>

    <label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="userEmail" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="userPassword" required>

    <label for="psw-repeat"><b>Repeat Password</b></label>
    <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

    <label for="address"><b>Address</b></label>
    <input type="text" placeholder="Address" name="userAddress" required>
    <hr>

    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>
    </form>
        </div>
    </div>
    
    <div class="container signin">
    <p>Already have an account? <a href="#">Sign in</a>.</p>
  </div>
